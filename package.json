{
  "name": "auto-gitignore",
  "displayName": "Auto-GitIgnore",
  "description": ".gitignore rule generator automatically by dragging and dropping files or folders into the editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.gitignore",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-gitignore.createGitIgnore",
        "title": "Create .gitignore file"
      },
      {
        "command": "auto-gitignore.updateGitIgnore",
        "title": "Update .gitignore file"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
